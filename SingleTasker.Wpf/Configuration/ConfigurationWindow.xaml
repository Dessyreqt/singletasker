        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SingleTasker.Wpf"
        mc:Ignorable="d"
        Title="Configuration" Height="148" Width="308" Topmost="True" ResizeMode="CanMinimize">
    <Grid>
        <Button Name="OpenConfigButton" Content="Open config file" Margin="10,10,10,0" VerticalAlignment="Top" Click="OpenConfigButton_Click"/>
        <Button Name="ReloadConfigButton" Content="Reload config" Margin="10,35,10,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
