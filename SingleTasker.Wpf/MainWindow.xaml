<Window x:Class="SingleTasker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SingleTasker"
        mc:Ignorable="d"
        Title="SingleTasker" Height="150" Width="300" ResizeMode="CanMinimize" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <CheckBox Name="TaskCompleteCheckbox" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Column="0" VerticalAlignment="Center" Click="TaskCompleteCheckbox_Click"/>
        <Label Name="TaskDescriptionLabel" Content="Label" Margin="30,10,10,10" Grid.Column="0" VerticalContentAlignment="Center"/>
        <Button Name="UpButton" Content="▲" Margin="10,10,10,0" Grid.Column="1" Height="20" Width="20" VerticalAlignment="Top" Click="UpButton_Click"/>
        <Button Name="DownButton" Content="▼" Margin="10,40,10,0" Grid.Column="1" Height="20" Width="20" VerticalAlignment="Top" Click="DownButton_Click"/>
        <Button Name="EditButton" Content="✎" Margin="10,0,10,10" Grid.Column="1" Height="20" Width="20" VerticalAlignment="Bottom" Click="EditButton_Click"/>
    </Grid>
</Window>
